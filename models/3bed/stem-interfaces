source /etc/network/interfaces.d/*.intf

#loopback
auto lo
iface lo inet loopback

#management
auto eth0
iface eth0 inet dhcp


#boss
auto swp1
iface swp1
bridge-vids 2002 2003 2004 2006 2007
bridge-allow-untagged no

#users
auto swp2
iface swp2
bridge-vids 2002 2003 2005
bridge-allow-untagged no

#router
auto swp3
iface swp3
bridge-vids 2002 2003 2004 2005 2006 2007
bridge-allow-untagged no

#n0
auto swp4
iface swp4
bridge-access 2003
bridge-allow-untagged yes

#n1
auto swp5
iface swp5
bridge-access 2003
bridge-allow-untagged yes

#n2
auto swp6
iface swp6
bridge-access 2003
bridge-allow-untagged yes

#walrus
auto swp7
iface swp7
bridge-access 2003
bridge-allow-untagged yes

#leaf
auto swp8
iface swp8
bridge-access 2003
bridge-allow-untagged yes

