source /etc/network/interfaces.d/*.intf

#loopback
auto lo
iface lo inet loopback

#management
auto eth0
iface eth0 inet dhcp


#n0
auto swp1
iface swp1
bridge-access 0
bridge-allow-untagged yes

#n1
auto swp2
iface swp2
bridge-access 0
bridge-allow-untagged yes

#n2
auto swp3
iface swp3
bridge-access 0
bridge-allow-untagged yes

